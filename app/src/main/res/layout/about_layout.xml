<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidDomInspection -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/book_ico_about_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_book_green_900_48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        />
    <TextView
        android:id="@+id/book_master_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Master"
        app:layout_constraintTop_toBottomOf="@+id/book_ico_about_layout"
        android:textStyle="bold |italic"
        android:padding="20dp"
        android:textAlignment="center"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/app_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikacja do komentowania książek"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/book_master_text"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/text_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wersja 1.1"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/app_text"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/text_authors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autorzy:"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_version"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/text_authors1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mateusz Górniak"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_authors"
        android:textSize="15sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>