<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidDomInspection -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
     style="@style/CardView2"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/book_ico_about_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_book_green_900_48dp" />

        <TextView
            android:id="@+id/book_master_text"
            android:layout_width="381dp"
            android:layout_height="242dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:text="Book Master"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold |italic" />

        <TextView
            android:id="@+id/app_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            android:text="Aplikacja do komentowania książek"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:text="Wersja 1.1"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_authors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="190dp"
            android:text="Autorzy:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_authors1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="210dp"
            android:text="Mateusz Górniak"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>